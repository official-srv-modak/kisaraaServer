<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <servlet>
  	<servlet-name>fileSystem</servlet-name>
  	<servlet-class>com.kisara.shopManager.FileSystem</servlet-class>
  	<load-on-startup>1</load-on-startup>
  </servlet>
  
  <servlet>
  	<servlet-name>get_image</servlet-name>
  	<servlet-class>com.kisara.shopManager.GetImageFromFileSystem</servlet-class>
  </servlet>
  <servlet-mapping>
   	<servlet-name>get_image</servlet-name>
   	<url-pattern>/image</url-pattern>
   </servlet-mapping>
</web-app>